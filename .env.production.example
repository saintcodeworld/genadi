# Production Environment Variables Template
# Copy this to .env.production and fill in your production values

# ============================================================================
# BACKEND CONFIGURATION
# ============================================================================

# Redis Configuration (use Redis Cloud or managed Redis in production)
REDIS_URL=redis://your-redis-host:6379

# Solana Configuration
SOLANA_RPC_URL=https://your-private-rpc-endpoint.com
PROGRAM_ID=CbDHViyDGxLz4Xc11wZmdAoqAKWUmwgXLrtzJ6sSZHT7

# Security (CHANGE THESE!)
SECRET_KEY=generate_a_secure_random_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Environment
ENVIRONMENT=production

# Server Configuration
HOST=0.0.0.0
PORT=8001

# API Keys (optional)
DEXSCREENER_API_KEY=your_key_here
BIRDEYE_API_KEY=your_key_here

# ============================================================================
# CRANK CONFIGURATION
# ============================================================================

# Solana RPC (use private RPC for better reliability)
RPC_URL=https://your-private-rpc-endpoint.com
PROGRAM_ID=CbDHViyDGxLz4Xc11wZmdAoqAKWUmwgXLrtzJ6sSZHT7

# Oracle Keypair (secure location in production)
ORACLE_KEYPAIR_PATH=/secure/path/to/keypair.json

# IDL Path
IDL_PATH=../target/idl/mememarket.json

# Bot Configuration (adjust for production load)
CHECK_INTERVAL_MS=30000
MAX_RETRIES=5
RETRY_DELAY_MS=3000

# Optional: Birdeye API Key
BIRDEYE_API_KEY=your_key_here
